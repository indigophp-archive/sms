{
    "name": "indigophp/sms",
    "description": "SMS abstraction layer",
    "license": "MIT",
    "keywords": ["sms", "short-message", "gateway"],
    "homepage": "https://indigophp.com",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "indigophp/http-adapter": "dev-develop",
        "league/url": "~3.0"
    },
    "require-dev": {
        "monolog/monolog": "~1.10.0",
        "phpspec/phpspec": "2.1.*@dev",
        "henrikbjorn/phpspec-code-coverage" : "1.0.*@dev"
    },
    "suggest": {
        "monolog/monolog": "Send logs as SMS messages"
    },
    "autoload": {
        "psr-0": {
            "Monolog\\": "lib/"
        },
        "psr-4": {
            "Indigo\\Sms\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
